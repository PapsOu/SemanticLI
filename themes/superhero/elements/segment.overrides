.ui.piled.segments:after,
.ui.piled.segments:before,
.ui.piled.segment:after,
.ui.piled.segment:before {
  background-color: lighten(@background, 10%);
}

.ui.segment,
.ui.segments {
    box-shadow: 0 1px 2px 0 #222;

    &.attached {
        border    : none;
        box-shadow: 0 1px 2px 0 #222;
    }
}
